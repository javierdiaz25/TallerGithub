Proceso Nombre_Edad_Estatura
	
	Definir Nombre, Apellido Como Caracter;
	Definir Edad Como Entero;
	Definir Estatura Como Real;
	
	Escribir "Ingrese su nombre";
	Leer Nombre; 
	
	Escribir "Ingrese su apellido";
	Leer Apellido;
	
	Escribir "Ingrese su edad";
	Leer Edad;
	
	Escribir "Ingrese su estatura";
	Leer Estatura;
	
	Limpiar Pantalla;
	
	Escribir "Su Nombre es ", Nombre," ", Apellido;
	Escribir "Su edad es ", Edad, " años";
	Escribir "Su estatura es ", Estatura, " metros"; 
	
FinProceso
