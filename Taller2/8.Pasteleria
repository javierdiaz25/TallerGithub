						Escribir Cantidad, " Tortas de Maria Luisa con Decoración de Salsas de Frutos Rojos";
						Escribir  "El valor a cancelar es de: ", ValorTorta;
						
					De Otro Modo:
						
						Escribir "Elija una opcion valida";
						
				FinSegun
				
			SiNo
				
				Escribir "Cuantas Cantidades desea?";
				Leer Cantidad;
				
				Torta1 <- 30000;
				ValorTorta <- Cantidad * Torta1;
				
				Escribir "El pedido de ", NombreCliente, " es:";
				Escribir Cantidad, " Tortas de Maria Luisa sin Decoración";
				Escribir  "El valor a cancelar es de: ", ValorTorta;
				
			FinSi
		2:
