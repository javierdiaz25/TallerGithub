Proceso Ciclo_Mientras
	
	Definir i, j Como Entero;
	
	i <- 1;
	
	Mientras i <= 10 Hacer
		j<-10;
		Mientras j >= i Hacer
			Escribir " " sin saltar;
			j<-j-1;
		FinMientras
		
		j<-1;
		
		Mientras j <= i Hacer
			Escribir "*" sin saltar;
			j<-j+1;
		FinMientras
		
		Escribir "";
		i <- i + 1;
	FinMientras
	
FinProceso
