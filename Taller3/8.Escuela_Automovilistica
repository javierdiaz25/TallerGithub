Proceso Escuela_Automovilistica
	
	Definir nombreCompleto1, nombreCompleto2, nombreCompleto3, nombreCompleto4, nombreCompleto5, nombreCompleto6, nombreCompleto7, nombreCompleto8 Como Caracter;
	Definir ced1, ced2, ced3, ced4, ced5, ced6, ced7, ced8, resulPrueba1, resulPrueba2, resulPrueba3, resulPrueba4, resulPrueba5, resulPrueba6, resulPrueba7, resulPrueba8, Opcion, i, usuarioPermitido, consultaUsuario Como Entero;
	Definir Respuesta, respuestaConsulta Como Logico;
	
	Opcion <- 1;
	usuarioPermitido <- 8;
	nombreCompleto1 <- "";
	nombreCompleto2 <- "";
	nombreCompleto3 <- "";
	nombreCompleto4 <- "";
	nombreCompleto5 <- "";
	nombreCompleto6 <- "";
	nombreCompleto7 <- "";
	nombreCompleto8 <- "";
	ced1 <- 0;
	ced2 <- 0;
	ced3 <- 0;
	ced4 <- 0;
	ced5 <- 0;
	ced6 <- 0;
	ced7 <- 0;
	ced8 <- 0;
	resulPrueba1 <- 0;
	resulPrueba2 <- 0;
	resulPrueba3 <- 0;
	resulPrueba4 <- 0;
	resulPrueba5 <- 0;
	resulPrueba6 <- 0;
	resulPrueba7 <- 0;
	resulPrueba8 <- 0;
	
	Mientras Opcion <= 2 Hacer
		
		Escribir "";
		Escribir "Bienvenido a la escuela automovilistica, A continuacion elija una opcion";
		
		Escribir "1. Registrar ingreso de usuarios";
		Escribir "2. Consultar usuarios y resultados";
		Escribir "3. Salir";
		Leer Opcion;
		
		Segun Opcion Hacer
			1:
				para i <- 1 Hasta usuarioPermitido Hacer
					
					Escribir "usuarios disponibles: ", usuarioPermitido;
					
					si i=1 Y nombreCompleto1 = "" Entonces
						
						Escribir "Ingrese nombre completo";
						Leer nombreCompleto1;
						
						Escribir "Ingrese numero de cedula";
						Leer ced1;
						
						Mientras ced1 = ced2 O ced1 = ced3 O ced1 = ced4 O ced1 = ced5 O ced1 = ced6 O ced1 = ced7 O ced1 = ced8 Hacer
							
							Escribir "El numero de cedula ya esta guardado";
							Leer ced1;
							
						FinMientras
						
						Escribir "Ingrese resultado de la prueba (0-100)";
						Leer resulPrueba1;
						
						Mientras resulPrueba1 < 0 O resulPrueba1 > 100 Hacer
							
							Escribir "Valor ingresado incorrectamente, por favor ingrese un valor entre 0-100";
							Leer resulPrueba1;
							
						FinMientras
						
						Escribir "usuario ", i, " registrado satisfactoriamente";
						
						usuarioPermitido <- usuarioPermitido - 1;
						
						
						Escribir "Desea registrar otro usuario";
						Leer Respuesta;
						
						Si Respuesta = Falso entonces 
							
							i <- 9;
							
						FinSi
						
					FinSi
					
					Si i = 2 Y nombreCompleto2 = "" Entonces
						
						Escribir "Ingrese nombre completo";
						Leer nombreCompleto2;
						
						Escribir "Ingrese numero de cedula";
						Leer ced2;
						
						Mientras ced2 = ced1 O ced2 = ced3 O ced2 = ced4 O ced2 = ced5 O ced2 = ced6 O ced2 = ced7 O ced2 = ced8 Hacer
							
							Escribir "El numero de cedula ya esta guardado";
							Leer ced2;
							
						FinMientras
						
						Escribir "Ingrese resultado de la prueba (0-100)";
						Leer resulPrueba2;
						
						Mientras resulPrueba2 < 0 O resulPrueba2 > 100 Hacer
							
							Escribir "Valor ingresado incorrectamente, por favor ingrese un valor entre 0-100";
							Leer resulPrueba2;
							
						FinMientras
						
						Escribir "usuario ", i, " registrado satisfactoriamente";
						
						usuarioPermitido <- usuarioPermitido - 1;
						
						
						Escribir "Desea registrar otro usuario";
						Leer Respuesta;
						
						Si Respuesta = Falso entonces 
							
							i <- 9;
							
						FinSi
						
					FinSi
					
					Si i = 3 Y nombreCompleto3 = "" Entonces
						
						Escribir "Ingrese nombre completo";
						Leer nombreCompleto3;
						
						Escribir "Ingrese numero de cedula";
						Leer ced3;
						
						Mientras ced3 = ced1 O ced3 = ced2 O ced3 = ced4 O ced3 = ced5 O ced3 = ced6 O ced2 = ced3 O ced2 = ced8 Hacer
							
							Escribir "El numero de cedula ya esta guardado";
							Leer ced3;
							
						FinMientras
						
						Escribir "Ingrese resultado de la prueba (0-100)";
						Leer resulPrueba3;
						
						Mientras resulPrueba3 < 0 O resulPrueba3 > 100 Hacer
							
							Escribir "Valor ingresado incorrectamente, por favor ingrese un valor entre 0-100";
							Leer resulPrueba3;
							
						FinMientras
						
						Escribir "usuario ", i, " registrado satisfactoriamente";
						
						usuarioPermitido <- usuarioPermitido - 1;
						
						
						Escribir "Desea registrar otro usuario";
						Leer Respuesta;
						
						Si Respuesta = Falso entonces 
							
							i <- 9;
							
						FinSi
					FinSi
					
					Si i = 4 Y nombreCompleto4 = "" Entonces
						
						Escribir "Ingrese nombre completo";
						Leer nombreCompleto4;
						
						Escribir "Ingrese numero de cedula";
						Leer ced4;
						
						Mientras ced4 = ced1 O ced4 = ced2 O ced4 = ced3 O ced4 = ced5 O ced4 = ced6 O ced4 = ced7 O ced4 = ced8 Hacer
							
							Escribir "El numero de cedula ya esta guardado";
							Leer ced4;
							
						FinMientras
						
						Escribir "Ingrese resultado de la prueba (0-100)";
						Leer resulPrueba4;
						
						Mientras resulPrueba4 < 0 O resulPrueba4 > 100 Hacer
							
							Escribir "Valor ingresado incorrectamente, por favor ingrese un valor entre 0-100";
							Leer resulPrueba4;
							
