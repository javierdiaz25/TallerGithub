					FinSi
					
					Escribir "Desea consultar otro usuario?";
					Leer respuestaConsulta;
					
				Hasta Que respuestaConsulta = Falso;
				
			3:
				Escribir "Hasta luego";
				Opcion <- 3;
			De Otro Modo:
				
				Mientras  Opcion >3 Hacer
					
					Escribir  "";
					Escribir "Elija una opcion valida";
					Opcion <- 1;
					
				FinMientras
				
		FinSegun
		
	FinMientras
	
	
FinProceso
