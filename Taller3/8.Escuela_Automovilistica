						Leer resulPrueba7;
						
						Mientras resulPrueba7 < 0 O resulPrueba7 > 100 Hacer
							
							Escribir "Valor ingresado incorrectamente, por favor ingrese un valor entre 0-100";
							Leer resulPrueba7;
							
						FinMientras
						
						Escribir "usuario ", i, " registrado satisfactoriamente";
						
						usuarioPermitido <- usuarioPermitido - 1;
						
						
						Escribir "Desea registrar otro usuario";
						Leer Respuesta;
						
						Si Respuesta = Falso entonces 
							
							i <- 9;
							
						FinSi
						
					FinSi
					
					Si i = 8 Y nombreCompleto8 = "" Entonces
						
						Escribir "Ingrese nombre completo";
						Leer nombreCompleto8;
						
						Escribir "Ingrese numero de cedula";
						Leer ced8;
						
						Mientras ced8 = ced1 O ced8 = ced2 O ced8 = ced3 O ced8 = ced4 O ced8 = ced5 O ced8 = ced6 O ced8 = ced7 Hacer
							
							Escribir "El numero de cedula ya esta guardado";
							Leer ced8;
							
						FinMientras
						
						Escribir "Ingrese resultado de la prueba (0-100)";
						Leer resulPrueba8;
						
						Mientras resulPrueba8 < 0 O resulPrueba8 > 100 Hacer
							
							Escribir "Valor ingresado incorrectamente, por favor ingrese un valor entre 0-100";
							Leer resulPrueba8;
							
						FinMientras
						
						Escribir "usuario ", i, " registrado satisfactoriamente";
						
						usuarioPermitido <- usuarioPermitido - 1;
						
						
						Escribir "Desea registrar otro usuario";
						Leer Respuesta;
						
						Si Respuesta = Falso entonces 
							
							i <- 9;
							
						FinSi
						
						Si usuarioPermitido = 0 Entonces
							
							Escribir "No se pueden registrar mas usuarios";
							
						FinSi
						
					FinSi
					
					Limpiar Pantalla;
					
				FinPara
				
			2:
				
				Repetir
					Escribir "Ingrese numero de cedula del usuario a consultar";
					Leer consultaUsuario;
					
					Si consultaUsuario <> ced1 Y consultaUsuario <> ced2 Y consultaUsuario <> ced3 Y consultaUsuario <> ced4 Y consultaUsuario <> ced5 Y consultaUsuario <> ced6 Y consultaUsuario <> ced7 Y consultaUsuario <> ced8 Entonces
						
						Repetir
							
							Escribir "Este usuario no se encuentra registrado, por favor ingrese otro numero de cedula";
							Leer consultaUsuario;
							
						Hasta Que consultaUsuario = ced1 O consultaUsuario = ced2 O consultaUsuario = ced3 O consultaUsuario = ced4 O consultaUsuario = ced5 O consultaUsuario = ced6 O consultaUsuario = ced7 O consultaUsuario = ced8
						
					FinSi
					
					Si consultaUsuario = ced1 Entonces
						
						Escribir "";
						Escribir "USUARIO 1";
						Escribir "NOMBRE: ", NombreCompleto1;
						Escribir "NUMERO DE CEDULA: ", ced1;
						Escribir "RESULTADO DEL CURSO: ", resulPrueba1;
						
						Si resulPrueba1 < 80 Entonces
							
							Escribir "El usuario no aprobo el curso";
							
						SiNo
							
							Escribir "El usuario aprobo el curso";
							
						FinSi
						
					FinSi
					
					Si consultaUsuario = ced2 Entonces
						
						Escribir "";
						Escribir "USUARIO 2";
						Escribir "NOMBRE: ", NombreCompleto2;
						Escribir "NUMERO DE CEDULA: ", ced2;
						Escribir "RESULTADO DEL CURSO: ", resulPrueba2;
						
						Si resulPrueba2 < 80 Entonces
							
							Escribir "El usuario no aprobo el curso";
							
						SiNo
							
							Escribir "El usuario aprobo el curso";
							
						FinSi
						
					FinSi
					
					Si consultaUsuario = ced3 Entonces
						
						Escribir "";
						Escribir "USUARIO 3";
						Escribir "NOMBRE: ", NombreCompleto3;
						Escribir "NUMERO DE CEDULA: ", ced3;
						Escribir "RESULTADO DEL CURSO: ", resulPrueba3;
						
						Si resulPrueba3 < 80 Entonces
							
							Escribir "El usuario no aprobo el curso";
							
						SiNo
							
							Escribir "El usuario aprobo el curso";
							
						FinSi
						
					FinSi
					
					Si consultaUsuario = ced4 Entonces
						
						Escribir "";
						Escribir "USUARIO 4";
						Escribir "NOMBRE: ", NombreCompleto4;
						Escribir "NUMERO DE CEDULA: ", ced4;
						Escribir "RESULTADO DEL CURSO: ", resulPrueba4;
						
						Si resulPrueba4 < 80 Entonces
							
							Escribir "El usuario no aprobo el curso";
							
						SiNo
							
							Escribir "El usuario aprobo el curso";
							
						FinSi
						
					FinSi
					
					Si consultaUsuario = ced5 Entonces
						
						Escribir "";
						Escribir "USUARIO 5";
						Escribir "NOMBRE: ", NombreCompleto5;
						Escribir "NUMERO DE CEDULA: ", ced5;
						Escribir "RESULTADO DEL CURSO: ", resulPrueba5;
						
						Si resulPrueba5 < 80 Entonces
							
							Escribir "El usuario no aprobo el curso";
							
						SiNo
							
							Escribir "El usuario aprobo el curso";
							
						FinSi
						
					FinSi
					
					Si consultaUsuario = ced6 Entonces
						
						Escribir "";
						Escribir "USUARIO 6";
						Escribir "NOMBRE: ", NombreCompleto6;
						Escribir "NUMERO DE CEDULA: ", ced6;
						Escribir "RESULTADO DEL CURSO: ", resulPrueba6;
						
						Si resulPrueba6 < 80 Entonces
							
							Escribir "El usuario no aprobo el curso";
							
						SiNo
							
							Escribir "El usuario aprobo el curso";
							
						FinSi
						
					FinSi
					
					Si consultaUsuario = ced7 Entonces
						
						Escribir "";
						Escribir "USUARIO 7";
						Escribir "NOMBRE: ", NombreCompleto7;
						Escribir "NUMERO DE CEDULA: ", ced7;
						Escribir "RESULTADO DEL CURSO: ", resulPrueba7;
						
